#include <NsCore/Error.h>
#include <NsCore/StringUtils.h>


namespace Noesis
{
namespace Core
{
////////////////////////////////////////////////////////////////////////////////////////////////////
TypeInfo::TypeInfo(): mId("")
{
}

////////////////////////////////////////////////////////////////////////////////////////////////////
TypeInfo::TypeInfo(const NsChar* id): mId(id)
{
    NS_ASSERT(mId != 0);
}

////////////////////////////////////////////////////////////////////////////////////////////////////
NsBool TypeInfo::operator==(const TypeInfo& typeInfo) const
{
    return String::Compare(mId, typeInfo.mId) == 0;
}

////////////////////////////////////////////////////////////////////////////////////////////////////
NsBool TypeInfo::operator!=(const TypeInfo& typeInfo) const
{
    return !(*this == typeInfo);
}

////////////////////////////////////////////////////////////////////////////////////////////////////
NsBool TypeInfo::operator<(const TypeInfo& typeInfo) const
{
    return String::Compare(mId, typeInfo.mId) < 0;
}

////////////////////////////////////////////////////////////////////////////////////////////////////
NsBool TypeInfo::operator<=(const TypeInfo& typeInfo) const
{
    return !(*this > typeInfo);
}

////////////////////////////////////////////////////////////////////////////////////////////////////
NsBool TypeInfo::operator>(const TypeInfo& typeInfo) const
{
    return typeInfo < *this;
}

////////////////////////////////////////////////////////////////////////////////////////////////////
NsBool TypeInfo::operator>=(const TypeInfo& typeInfo) const
{
    return !(*this < typeInfo);
}

////////////////////////////////////////////////////////////////////////////////////////////////////
const NsChar* TypeInfo::GetId() const
{
    return mId;
}

}
}
