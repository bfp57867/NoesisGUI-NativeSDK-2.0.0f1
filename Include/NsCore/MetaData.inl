#include <NsCore/Error.h>


namespace Noesis
{
namespace Core
{

template<class T> struct T2T;

////////////////////////////////////////////////////////////////////////////////////////////////////
inline NsSize MetaData::Count() const
{
    return mMetaDatas.size();
}

////////////////////////////////////////////////////////////////////////////////////////////////////
inline TypeMetaData* MetaData::Get(NsSize index) const
{
    NS_ASSERT(index < Count());
    return mMetaDatas[index];
}

////////////////////////////////////////////////////////////////////////////////////////////////////
template<class T> T* MetaData::Find() const
{
    return static_cast<T*>(Find(T::StaticGetClassType((T2T<T>*)0)));
}

}
}
